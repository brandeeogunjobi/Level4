//Ti.UI.setBackgroundColor('#81B465');
var OpenGallery = function(){
	
var pWidth = Ti.Platform.displayCaps.platformWidth;
var pHeight = Ti.Platform.displayCaps.platformHeight;
var itemCount = 15; // total amount of images on screen
var rowCount = 3; //images per row
var margin = 10; //space between images
var canvasWidth = (pWidth / rowCount - margin*2);
var size = (pHeight / 5) - margin;

var window1 = Ti.UI.createWindow({
	backgroundColor: "white",
});

/*var NavWindow = Ti.UI.createNavigationWIndow({
	window: window1
});*/

var button1 = Ti.UI.createButton({
  	  title: 'Enter Now',
  	  color: "#000",
  	  font: {fontSize: 18, fontFamily: "Arial", fontWeight: "bold", fontStyle: "italic"},
  	  //backgroundImage:'metal-pattern.jpg',
  	  //backgroundSelectedImage: "metal-texture.jpg",
  	  top: 50,
  	  width: 260,
  	  height: 95
  	
  });

var border = Ti.UI.createView({
	backgroundColor: "#cecece",
	height: 1,
	width: pWidth,
	top: 20
});

var viewContainer = Ti.UI.createScrollView({ //this our the boxes for the images
	backgroundColor: "#f00",
	layout: "horizontal",
	width: pWidth,
	size: pHeight,
	contentWidth: pWidth,
	showVerticalScrollIndicator: true
	
});

for(var i = 0; i < imageFile.length; i++){
	var imageContainer = Ti.UI.createImageView({
		backGround: "#33ccff",
		image: "Vimages/" + imageFile[i],
		borderRadius: 4,
		top: 10,
		left: 10,
		right: 10,
		width: canvasWidth,
		height: size,
		names: imageFile[i]
	});
	var window2 = Ti.UI.createWindow({
	backgroundColor: "#f00",
});
/*var text = Ti.UI.createLabel({text: i+1, color: "#00FF99"}); //Number Label
	view.add(text);*/
	viewContainer.add(imageContainer);
}

var openImage = function(event){
var imageWIndow = Ti.UI.createWindow ({
	title: event.source.names,
	borderRadius: 4,
});
var fullImage = Ti.UI.createImageView({
	image: event.source.image,
	borderRadiusm: 4
});

imageWindow.add(viewContainer);
//homeNav.openWindow(imageWindow);
window1.openWindow(imageWindow);
};

viewContainer.addEventListener("click", openImage);

var imageFile = ['abstract-background.jpg','arabian-wallboard.jpg', 'bamboo.jpg', 'black-leaves.jpg', 'blue-abstract.jpg'];
button1.addEventListener("click", openGallery);
window1.add(button1);
window1.add(border);
window2.add(viewContainer);
//navWindow.open();
window1.open();


