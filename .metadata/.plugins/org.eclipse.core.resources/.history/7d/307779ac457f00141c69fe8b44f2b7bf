Titanium.UI.setBackgroundColor('#FFF');

var pWidth =Ti.UI.Platform.displayCap.platformWidth;
var pWeight = Ti.UI.Platform.displayCap.platformWeight;
var itemCount = 15;
var rowCount = 3;
var margin = 10;
//var trueCanvasWidth = 
var size = 100x100;

var window1 = Ti.UI.createwindow({
	background: "#9BAEBF",
	layour: "horizontal"
});

var border = Ti.UI.createView({
	backgroundColor: "#cecece",
	height: 1,
	width: pWidth,
	top: 20
});

var viewContainer = Ti.UI.createVIew({
	width: 0,
	backgroundColor: "#fef",
	layout: "horizontal"
});

for(var i=0; i<itemCount; i++){
	var view = TI.UI.createView({
		backgroundColor: "#33ccff",
		top: margin,
		left: margin,
		width: size,
		height: size
	});
	var text = Ti.UI.createLabel({text: i+1, color: "#fff"});
	view.add(text);
	viewContainer.add(view);
}

window1.add(border);
window1.add(viewContainer);
window1.open();
