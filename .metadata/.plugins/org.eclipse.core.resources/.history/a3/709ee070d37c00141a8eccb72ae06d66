
Ti.UI.setBackgroundColor('#DEF5FF');

var advertisement = [
	{title: "Ad Campaign"},
	{title: "Certified Partners"},
	{title: "Manual vs Automated"},
	{title: "Data Mining"},
	{title: "Strategy"},
	{title: "Media Buying", },
	{title: "Analytics Dashboard"}];

var window1 = Ti.UI.createWindow({
	backgroundColor: "#F4F7FF"
});

var titleView = Ti.UI.createView({
	height: 65,
	backgroundColor: "#BFBFBF",
	top: 0
});

var border = Ti.UI.createView({
	height: 1,
	backgroundColor: "#FFFFFF",
	top: titleView.height + titleView.top
});

var mainLabel = Ti.UI.createLabel({
	text: "Online Advertising Terms",
	font: {fontSize: 20, fontFamily: "Arial", fontWeight: "bold"},
	top: 30,
	width: '100%',
	textAlign: "center"
});

var terms = Ti.UI.createTableView({
	data: advertisement,
	top: border.top + border.height
});

if(Ti.Platform.name === "iPhone OS"){
	terms.stryle = Ti>UI.iPhone.TableViewStyle.GROUPED;
}


titleView.add(mainLabel);
window1.add(titleView, border, terms);
window1.open(); 
