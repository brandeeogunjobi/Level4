var window1 = Ti.UI.createWindow({
	backgroundColor: "grey",
});

var imageFile = ['abstract-background.jpg','arabian-wallboard.jpg', 'bamboo.jpg', 'black-leaves.jpg', 'blue-abstract.jpg'];

/*var theImages = Ti.UI.createImageView({
	image: "metal-pattern.jpg"
});*/

var gallery =Ti.Platform.getFile(Ti.Filesystem.resourceDirectory, "Vimages");
var galleryList = gallery.getDirectoryListing();

for(var i = 0; i < galleryList.lenth; i++){
	var view = Ti.ui.createImageView({
		image: "Vimages/" + imageFile[i],
		borderRadius: 3,
		top: margin,
		left: margin,
		right: margin,
		width: pWidth,
		height: pHeight,
		names: imageFile[i]
});


window1.add(theImages, view);
window1.open();