
Ti.UI.setBackgroundColor('#DEF5FF');


var win1 = Ti.UI.createWindow({
	backgroundColor: "#F4F7FF"
});

var titleView = Ti.UI.createView({
	height: 65,
	backgroundColor: "#BFBFBF"
});

var border = Ti.UI.createView({
	height: 1,
	backgroundColor: "#FFFFFF",
	top: titleView.height + titleView.top
});

var mainLabel = Ti.UI.createLabel({
	text: "Online Advertising Terms",
	font: {fontSize: 20, fontFamily: "Arial", fontWeight: "bold"},
	top: 30,
	width: '100%',
	textAlign: "center"
});

var adTerms = Ti.UI.createTableView({
	top: border.top + border.height
});

if(Ti.Platform.name === "iPhone OS"){
	advertisement.style = Ti.UI.iPhone.TableViewStyle.GROUPED;
}

var adSection = Ti.UI.createTableViewSection({
	headerTitle: "What should go here",
	footerTitle: "And the footer says?"
});

var getDetail = function(){
	var detailWindow = Ti.UI.createWindow({
		backgroundColor: "#F4F7FF"
});
	var detailTitleView = Ti.UI.createView({
		height: 65,
		backgroundColor: "#BFBFBF"
});
	
	var detailBorder = Ti.UI.createView({
		height: 1,
		backgroundColor: "#FFFFFF",
		top: detailTitleView.height + detailTitleView.top
});
	
	var detailMainLabel = Ti.UI.createLabel({
		text: this.title,
		font: {fontSize: 20, fontFamily: "Arial", fontWeight: "bold" },
		top: 30,
		width: '100%',
		textAlign: "center"
});

	detailTitleView.add(detailMainLabel);
	detailWindow.add(detailTitleView, detailBorder);
	
	detailWindow.open();
	
for(var i=0, j=advertisement.length; i<j; i++){
	var theRow = Ti.UI.createTableViewRow({
		title: advertisement[i].title,
		hasChild: true
});


if(Ti.Platform.name === "iPhone OS"){
	theRow.hasChild = false;
	theRow.hasDetail = true;
}

adSection.add(theRow);
theRow.addEventListener("click", getDetail);  
}

	var adSections = [adSection];

advertisement.setData(adSections);

titleView.add(mainLabel);
win1.add(titleView,border,advertisement);
win1.open();

